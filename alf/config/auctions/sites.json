{
  "sites": [
    {
      "name": "ebay_motors_uk",
      "enabled": true,
      "adapter": "rest",
      "base_url": "https://api.ebay.com",
      "auth": {
        "type": "oauth2_client_credentials",
        "token_url": "https://api.ebay.com/identity/v1/oauth2/token",
        "client_id_env_var": "EBAY_CLIENT_ID",
        "client_secret_env_var": "EBAY_CLIENT_SECRET",
        "scope": "https://api.ebay.com/oauth/api_scope"
      },
      "endpoints": {
        "auctions": "/buy/browse/v1/item_summary/search"
      },
      "rate_limit": {
        "requests_per_second": 5.0,
        "burst": 10
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2.0,
        "retry_on_status": [429, 500, 502, 503, 504]
      },
      "default_params": {
        "category_ids": "9801",
        "filter": "buyingOptions:{AUCTION},itemEndDate:[..,..]",
        "limit": 200,
        "X-EBAY-C-MARKETPLACE-ID": "EBAY_GB"
      },
      "pagination": {
        "type": "offset",
        "page_param": "offset",
        "page_size_param": "limit",
        "start_page": 0,
        "offset_step": 200
      },
      "field_mapping": {
        "id":            "itemId",
        "manufacturer":  null,
        "model":         "title",
        "auction_date":  "itemEndDate",
        "sold_price":    "currentBidPrice.value",
        "reserve_price": null,
        "start_price":   "startingBidPrice.value",
        "currency":      "currentBidPrice.currency",
        "lot_id":        "itemId",
        "url":           "itemWebUrl"
      }
    },
    {
